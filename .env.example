# إعدادات خدمة المحتوى - منصة نائبك.كوم
# انسخ هذا الملف إلى .env وقم بتعديل القيم

# إعدادات Django الأساسية
SECRET_KEY=your-very-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# إعدادات قاعدة البيانات
# للتطوير (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# للإنتاج (PostgreSQL)
# DATABASE_URL=postgresql://username:password@host:port/database_name

# إعدادات Redis
REDIS_URL=redis://localhost:6379/0

# إعدادات CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# إعدادات الملفات
MEDIA_URL=/media/
STATIC_URL=/static/

# إعدادات Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# إعدادات البريد الإلكتروني (اختياري)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# إعدادات التسجيل
LOG_LEVEL=INFO

# إعدادات الأمان (للإنتاج فقط)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
